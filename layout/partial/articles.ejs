<div class="articles margin ">
    <div class="articles__head clearfix">
        <div class="articles__dot">
            <%for(let i = 0; i < 10; i++){%>
                <div class="articles__dot-row">
                    <%for(let i = 0; i < 20; i++){%>
                        <span></span>
                    <%}%>
                </div>
            <%}%>
        </div>
    
        <a class="fl section-title articles__title" href="#<%= theme.article.name %>"><span>#</span> <span><%= theme.article.name %></span></a>
    </div>
    <div class="articles__main">
        <% for(const item of page.posts.data) {%>
        <div class="articles__item">
            <a class="articles__item__img" href="<%=fillPath(item.path)%>">
                <div class="articles__item__img-front"><div class="articles__item__img-content lazy" data-bg="<%=fillPath(item.img || '/medias/default.png')%>"></div></div>
                <div class="articles__item__img-back lazy" data-bg="<%=fillPath(item.img || '/medias/default.png')%>"></div>
            </a>
            <div class="articles__item__tags">
                <% for(const tag of item.tags.data) {
                    // console.log(tag)
                %>
                
                    <%- partial('partial/tag', {info: {name:tag.name, path:tag.path}, hover: false}) %>   
                <% } %>
            </div>
            <div class="articles__item__title">
                <a href="<%=fillPath(item.path)%>" title="<%=item.title%>"><%=item.title%></a>
            </div>
            <div class="articles__item__desc">
                <p><%=strip_html(item.content).substring(0, 120) %></p>
            </div>
            <div class="articles__item__end">
                <span class="articles__item__date"><%=date(item.date, theme.dateFormat)%></span>
                <div class="articles__item__catas">
                <% for(const cata of item.categories.data){ %>
                    <a class="" href="<%=fillPath(cata.path)%>">#<%=cata.name%></a>
                <%}%>
                </div>
            </div>
        </div>
        <% } %>
    </div>

</div>